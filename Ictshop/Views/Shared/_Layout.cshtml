<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đình Thắng Coffe- Uy tín Chất lượng</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using Ictshop.Models

    <style type="text/css">
        body {
            background-color: #F0F0F0;
        }

        .navbar-inverse {
            background-color: #39B54A;
            border-color: #39B54A;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: x-large;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }

        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: white;
        }
    </style>



</head>

<body>

    @{ var u = Session["use"] as Ictshop.Models.Nguoidung; }

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="top_header col-md-12" style="height: 40px;">


    <div class="row">
        @*<div class="col-sm-2"><img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="20" height="20" style="padding:0" /></div>*@
        

        <div class="col-sm-4 col-md-0" style="padding-left: 300px; margin-top: 8px; display: inline-block;">
            @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
        </div>
        @*@Html.Action("GioHangPartial", "GioHang",new { @style = "color:while" })*@
        @{ if (u != null)
            {
                <div class="col-sm-4 col-md-0">
                    <a style="color: white; font-size: 15px" href="@Url.Action("Profile", "User", new { id = u.MaNguoiDung  })"> Chào : @u.Hoten</a>
                    &nbsp;&nbsp;
                    @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                    <a style="color:white; font-size:15px; margin-top:9px; display:inline-block;" href="/User/DangXuat">Đăng xuất</a>

                   
                </div> }
            else
            {
                <div class="col-sm-4 col-md-0">
                    <a style="color: white; font-size: 15px; margin-top: 9px; display: inline-block;" href="/User/Dangky"> Đăng ký</a>
                    &nbsp;
                    <a style="color: white; font-size: 15px; margin-top: 9px; display: inline-block;" href="/User/Dangnhap"> Đăng nhập</a>
                </div> } }


    </div>

</div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand" src="~/HinhanhSP/logo.png" width="50" height="50" style="padding:0" />
                @Html.ActionLink(" Dinh Thang Coffe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <form class="form-inline" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>*@
                </form>

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" title="sanpham">
                            @*<span><i class=" glyphicon-music "></i></span>*@
                            <span>SẨN PHẨM</span>

                        </a>
                        @*<span><i class=" glyphicon-music "></i> </span>
                            <br />
                            <span>@Html.ActionLink("Trang chủ", "Index", "Home") </span>*@
                    </li>
                    
                    <li>
                        <a href="#" title="KHUYENMAI">
                            @*<span><i class="fas fa-desktop"></i></span>*@
                            <span>KHUYẾN MÃI</span>

                        </a>
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            @*<span><i class="fas fa-headphones"></i></span>*@
                            <span>LIÊN HỆ</span>

                        </a>
                    </li>
                    <li>
                        <a style="color:white"
                           class="nav-link"
                           href="@Url.Action("Index", "DonHangs")">ĐƠN HÀNG</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        
        <br />
    </div>
    <footer class="bg-info" style="padding-left:50px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <h2>Về Chúng tôi</h2>
                <span>Giới thiệu</span>
                <br />
                <span>Chính sách vận chuyển</span>
                
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Kết nối</h2>
                <span>Youtube</span>
                <br />
                <span>Instagram</span>
                <br />
                <span>Zalo</span>
                <br />
                <span>Tiktok</span>


            </div>
            
           
        </div>
        <hr />
        <center> <p class="bg-primary">&copy; @DateTime.Now.Year - Đình Thắng Coffe</p></center>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
